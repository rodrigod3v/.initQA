generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Project {
  id           String        @id @default(uuid())
  name         String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  environments Environment[]
  requests     Request[]
  webScenarios WebScenario[]
  loadTests    LoadTest[]
}

model Environment {
  id        String   @id @default(uuid())
  name      String
  variables Json?
  projectId String
  project   Project  @relation(fields: [projectId], references: [id])
  executions RequestExecution[]
  webExecutions WebExecution[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Request {
  id         String             @id @default(uuid())
  name       String?
  method     String
  url        String
  headers    Json?
  body       Json?
  testScript String?
  projectId  String
  project    Project            @relation(fields: [projectId], references: [id])
  executions             RequestExecution[]
  expectedResponseSchema Json?
  createdAt              DateTime           @default(now())
  updatedAt  DateTime           @updatedAt
}

model RequestExecution {
  id               String       @id @default(uuid())
  requestId        String
  request          Request      @relation(fields: [requestId], references: [id])
  environmentId    String?
  environment      Environment? @relation(fields: [environmentId], references: [id])
  response         Json?
  status           Int
  duration         Int
  validationResult Json?
  testResults      Json?
  createdAt        DateTime     @default(now())
}

model WebScenario {
  id        String         @id @default(uuid())
  name      String
  steps     Json           // Array of steps: { type: 'GOTO' | 'CLICK' | 'FILL' | 'ASSERT_VISIBLE', selector?: string, value?: string }
  projectId String
  project   Project        @relation(fields: [projectId], references: [id])
  executions WebExecution[]
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
}

model WebExecution {
  id         String       @id @default(uuid())
  scenarioId String
  scenario   WebScenario  @relation(fields: [scenarioId], references: [id])
  environmentId String?
  environment   Environment? @relation(fields: [environmentId], references: [id])
  status     String      // "SUCCESS", "FAILED"
  duration   Int
  logs       Json?       // Details of each step execution
  screenshot String?     // Path to error screenshot if failed
  createdAt  DateTime    @default(now())
}

model LoadTest {
  id        String          @id @default(uuid())
  name      String
  config    Json            // k6 config: { targetUrl, vus, duration, rampUpStages }
  projectId String
  project   Project         @relation(fields: [projectId], references: [id])
  executions LoadExecution[]
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
}

model LoadExecution {
  id         String   @id @default(uuid())
  loadTestId String
  loadTest   LoadTest @relation(fields: [loadTestId], references: [id])
  status     String   // "FINISHED", "CRASHED"
  duration   Int
  results    Json?    // Serialized k6 JSON output
  createdAt  DateTime @default(now())
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
